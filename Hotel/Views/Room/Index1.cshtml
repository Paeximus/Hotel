@model IEnumerable<Hotel.Models.ViewModels.RoomViewModel>
@{
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

			<div class="content container-fluid">
				<div class="page-header">
					<div class="row align-items-center">
						<div class="col">
							<h3 class="page-title mt-5">Rooms</h3>
						</div>
					</div>
				</div>

				@if (Model != null && Model.Any())
				{
					<div class="row">
					@foreach (var item in Model)
					{
						<div class="card w-25">
							<div class="card-body">
								<div style="text-align:center">
									@if (item.RoomImage == null)
									{
										<b style="font-family:Garamond">No prieview available</b>
									}
									else
									{
										<img src="data:image/jpg;base64,@Convert.ToBase64String(item.RoomImage)" alt="Room Image" style="width: 200px; height: 150px;" />
									}
									<br />
								</div>
								<b>Room: </b> @Html.DisplayFor(modelItem => item.RoomNo)<br />
								<b>Max. Number of Occupants: </b> @Html.DisplayFor(modelItem => item.MaxOccupants)<br />
								<b>IsOccupied</b> @Html.DisplayFor(modelItem => item.IsOccupied)<br />
								<b>Price: GH&#8373;</b> @Html.DisplayFor(modelItem => item.Price)<br />
								<b>Floor: </b>@Html.DisplayFor(modelItem => item.Floor.FloorName)<br />
								<a asp-controller="Room" asp-action="Edit" asp-route-id="@item.RoomId" onclick="save(@item.RoomId)"><button class="btn btn-block btn-outline-primary">Edit</button></a>
								<a asp-controller="Reservation" asp-action="Add1" asp-route-id="@item.RoomId" onclick="save(@item.RoomId)"><button class="btn btn-block btn-outline-success">Make Reservation</button></a>
								<a asp-controller="Room" asp-action="Details1" asp-route-id="@item.RoomId" onclick="save(@item.RoomId)"><button class="btn btn-block btn-outline-secondary">Details</button></a>
								<a asp-controller="Room" asp-action="Delete" asp-route-id="@item.RoomId" onclick="save(@item.RoomId)"><button class="btn btn-block btn-outline-danger">Delete</button></a>
								<script>
									function save(roomId){
										localStorage.setItem('object', roomId);
									}
								</script>
							</div>
						</div>
					}
					</div>
				}
				else
				{
					<h1 class="text-light">No available rooms</h1>
				}
				@* <button type="button" class="btn btn-primary buttonedit ml-2">Save</button>
				<button type="button" class="btn btn-primary buttonedit">Cancel</button> *@
			</div>
	