@model Hotel.Models.ViewModels.ReservationViewModel
@{
    ViewData["Title"] = "Delete";
}

@if (Model == null)
{
    <div class="alert alert-danger">
        <h3>Reservation not found</h3>
        <p>The reservation you're trying to delete does not exist.</p>
        <a asp-action="Index" class="btn btn-primary">Back to List</a>
    </div>
}
else
{
    <h1>Delete</h1>
    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>Reservation</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Name
            </dt>
            <dd class="col-sm-10">
                @if (Model.User != null)
                {
                    @Html.DisplayFor(model => model.User.FirstName) @Html.DisplayFor(model => model.User.LastName) @Html.DisplayFor(model => model.User.OtherNames)
                }
                else
                {
                    <text>N/A</text>
                }
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ReservationDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ReservationDate)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ArrivalDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ArrivalDate)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DateOfExit)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DateOfExit)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ModeOfOrder)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ModeOfOrder)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.WithCar)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.WithCar)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CarRegNo)
            </dt>
            <dd class="col-sm-10">
                @if (!string.IsNullOrEmpty(Model.CarRegNo))
                {
                    @Html.DisplayFor(model => model.CarRegNo)
                }
                else
                {
                    <text>-</text>
                }
            </dd>
            <dt class="col-sm-2">
                Room Image
            </dt>
            <dd class="col-sm-10">
                @if (Model.Room != null && Model.Room.RoomImage != null)
                {
                    <img src="data:image/jpg;base64,@Convert.ToBase64String(Model.Room.RoomImage)" alt="Room Image" style="width: 150px; height: 150px;" />
                }
                else
                {
                    <img src="~/images/no-image.png" alt="No Image" style="width:150px; height:150px;" />
                }
            </dd>
            <dt class="col-sm-2">
                Room Number
            </dt>
            <dd class="col-sm-10">
                @if (Model.Room != null)
                {
                    @Html.DisplayFor(model => model.Room.RoomNo)
                }
                else
                {
                    <text>N/A</text>
                }
            </dd>
        </dl>
        <form asp-action="Delete" onsubmit="retrieve()">
            <input type="hidden" asp-for="ReservationId" value="@Model.ReservationId" id="reserve" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="Index">Back to List</a>
        </form>
        <script>
            document.addEventListener("DOMContentLoaded", function() {
                   var rId = localStorage.getItem('rid');
                   if (rId) {
                       document.getElementById("reserve").value = rId;
                   }
        </script>
    </div>
}